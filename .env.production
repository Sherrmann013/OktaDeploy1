# Production Environment Configuration for Self-Hosting
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=change-this-to-a-very-secure-random-string-minimum-32-characters

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/security_dashboard
PGHOST=localhost
PGPORT=5432
PGUSER=dashboard_user
PGPASSWORD=your_secure_password
PGDATABASE=security_dashboard

# Security Settings
HTTPS_ONLY=true
SECURE_COOKIES=true

# OKTA Integration (Optional - comment out if not using OKTA)
# OKTA_API_TOKEN=your_okta_api_token_here
# OKTA_BASE_URL=https://your-domain.okta.com

# KnowBe4 Integration (Optional - comment out if not using KnowBe4)
# KNOWBE4_API_KEY=your_knowbe4_api_key_here
# KNOWBE4_BASE_URL=https://api.knowbe4.com

# Email Configuration (Optional)
# SMTP_HOST=smtp.your-domain.com
# SMTP_PORT=587
# SMTP_USER=noreply@your-domain.com
# SMTP_PASS=your_smtp_password
# SMTP_FROM=noreply@your-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/application.log

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30